# Production environment variables for client
# This will be used during the build process

# API URL without trailing slash to prevent double-slash issues in requests
REACT_APP_API_URL=https://lms-flame-pi.vercel.app

# Set PUBLIC_URL to your deployment URL for proper asset path resolution
PUBLIC_URL=https://lms-flame-pi.vercel.app

# Prevent build failures from linting warnings
CI=false

# Optimize build performance and security
GENERATE_SOURCEMAP=false
REACT_APP_ENV=production

# Fallback in case direct API calls fail (for serverless function timeout recovery)
REACT_APP_API_TIMEOUT=20000
REACT_APP_RETRY_ATTEMPTS=3